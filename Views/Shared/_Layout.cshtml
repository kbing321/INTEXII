<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - INTEXII</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/INTEXII.styles.css" asp-append-version="true" />
    <meta http-equiv="Content-Security-Policy" />  
</head>

<style> 
    body {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }
    #header {
        position: fixed;
        text-align: center;
        top: 0;
        width: 100%;
        transition: 0.2s;
    }
    footer {
        /*background-color: #333;*/
        color: black;
        padding: 10px;
        margin-top: auto;
    }
    .banner_img {
        height: 85px;
        width: 130px;
        box-shadow: none;
        border: none;
    }
    .bground_color{
        background-color: #df9b23;
    }
</style>
<header>
    <div id="header" class="bground_color">
        <div class="row bg-white">
            <div class="col-2">
                <a class="float-left" asp-controller="Home" asp-action="Index">
                    <img class="banner_img float-left" src="~/img/IMG-0103.jpg" alt="Byu in Egypt Logo" />
                </a>
            </div>
            <div class="col-10 align-self-center text-start">
                <h1>BYU Egypt Excavation Project</h1>
            </div>
        </div>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-transparent">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Data</a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Prediction">Predict State of Wrapping</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Unsupervised">Changes in Burial Practices</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="UnauthenticatedBurial">Burial Data</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Admin</a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="DataAdmin">Manage Data Data</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Users" asp-action="">Manage Users</a>
                                <a class="dropdown-item" asp-area="" asp-controller="finalburialrecords2" asp-action="">Burial Data</a>
                            </div>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </div>
</header>
<body>
    <div class="container" style="margin-top:150px;">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
</body>
    <footer>
        <div id="footer" class="container text-center bg-transparent">
            &copy; 2023 - INTEXII - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</html>
