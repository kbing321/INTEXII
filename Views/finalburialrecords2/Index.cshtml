@model IEnumerable<INTEXII.Models.finalburialrecords2>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p><br />
<table class="table table-bordered">
    <thead class="table-light">
        <tr>
            <th>
                Burial ID
            </th>
            <th>
                Sex
            </th>
            <th>
                Age at Death
            </th>
            <th>
                Head Direction
            </th>
            <th>
                Hair Color
            </th>
            <th>
                Face Bundles
            </th>
            <th>
                Textile Color
            </th>
            <th>
                Textile Structure
            </th>
            <th>
                Textile Function
            </th>
            <th>
                Burial Depth
            </th>
            <th>
                Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.burialid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sex)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ageatdeath)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.headdirection)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HairColor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.facebundles)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.colorvalue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.structurevalue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.textilefunctionvalue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.depth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.filename)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
