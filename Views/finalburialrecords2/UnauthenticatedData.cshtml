@model IEnumerable<INTEXII.Models.finalburialrecords2>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" asp-action="UnauthFilter">Filter</a>
    <a class="btn btn-primary" asp-action="UnauthClearFilters">Clear Filter</a>
</p><br />
<table class="table table-bordered">
    <thead class="table-light">
        <tr>
            <th>
                Burial ID
            </th>
            <th>
                Sex
            </th>
            <th>
                Age at Death
            </th>
            <th>
                Head Direction
            </th>
            <th>
                Hair Color
            </th>
            <th>
                Face Bundles
            </th>
            <th>
                Textile Color
            </th>
            <th>
                Textile Structure
            </th>
            <th>
                Textile Function
            </th>
            <th>
                Burial Depth
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>
                    @Html.DisplayFor(modelItem => item.burialid)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.sex)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.ageatdeath)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.headdirection)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.HairColor)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.facebundles)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.colorvalue)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.structurevalue)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.textilefunctionvalue)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.depth)
                    </td>
                    <td>
                        <a asp-action="UnauthDetails" asp-route-id="@item.id">Details</a> 
                    </td>
                </tr>
        }
    </tbody>
</table>

<div class="row mt-3">
    <div class="col">
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">

                @if (ViewBag.CurrentPage > 1)
                {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("UnauthenticatedData", new { pageNum = ViewBag.CurrentPage - 1 })">Previous</a>
                            </li>
                }

                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link" href="@Url.Action("UnauthenticatedData", new { pageNum = i })">@i</a>
                            </li>
                }

                @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("UnauthenticatedData", new { pageNum = ViewBag.CurrentPage + 1 })">Next</a>
                            </li>
                }

            </ul>
        </nav>
    </div>
</div>